{
  "name": "@atlas.agents/speech-tts",
  "version": "0.2.0",
  "type": "module",
  "description": "Text-to-speech service with Edge TTS and browser fallback + viseme generation",
  "main": "dist/speech-tts.cjs.js",
  "module": "dist/speech-tts.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/speech-tts.es.js",
      "require": "./dist/speech-tts.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@atlas.agents/types": "0.2.0",
    "@atlas.agents/config": "^1.0.0",
    "edge-tts-universal": "^1.3.3"
  },
  "devDependencies": {
    "typescript": "^5.5.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^4.0.18"
  }
}
