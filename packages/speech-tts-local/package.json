{
  "name": "@atlas.agents/speech-tts-local",
  "version": "0.2.0",
  "type": "module",
  "description": "Local GPU-accelerated TTS via WebSocket (Kokoro) with web-speech fallback",
  "main": "dist/speech-tts-local.cjs.js",
  "module": "dist/speech-tts-local.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/speech-tts-local.es.js",
      "require": "./dist/speech-tts-local.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@atlas.agents/types": "0.2.0",
    "@atlas.agents/speech-tts": "0.2.0",
    "@atlas.agents/config": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.5.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^4.0.18"
  }
}
